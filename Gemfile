# A sample Gemfile
source 'https://rubygems.org'

gem 'sinatra'
gem 'sinatra-contrib'
gem 'pg', '0.16.0'
gem 'sinatra-authentication-ottoman', '0.0.2'
gem 'faraday'
gem 'multi_json'

group :development do
    gem 'awesome_print'
    gem 'guard'
    gem 'guard-rack'
    gem 'guard-bundler'
end

group :test do
    gem 'rack'
    gem 'rack-test'
    gem 'rspec'
    gem 'awesome_print'
end

group :production do
    gem 'sinatra-cross_origin'
    gem 'stripe'
end
